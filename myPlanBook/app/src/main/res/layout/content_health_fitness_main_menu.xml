<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/healthFitnessMainMenuConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/healthFitnessMainMenuContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/logBodyWeightLinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_outline_bordered"
            android:padding="15sp"
            android:text="BODY WEIGHTS"
            android:textColor="#000000"
            android:textSize="20sp"
            app:fontFamily="sans-serif-thin" />

        <Button
            android:id="@+id/logCaloriesLinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_outline_bordered"
            android:padding="15sp"
            android:text="CALORIES"
            android:textColor="#000000"
            android:textSize="20sp"
            app:fontFamily="sans-serif-thin" />

        <Button
            android:id="@+id/logWorkoutsLinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_outline_bordered"
            android:padding="15sp"
            android:text="WORKOUTS"
            android:textColor="#000000"
            android:textSize="20sp"
            app:fontFamily="sans-serif-thin" />

        <Button
            android:id="@+id/logBodyFatLinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_outline_bordered"
            android:padding="15sp"
            android:text="BODY FAT"
            android:textColor="#000000"
            android:textSize="20sp"
            app:fontFamily="sans-serif-thin" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>