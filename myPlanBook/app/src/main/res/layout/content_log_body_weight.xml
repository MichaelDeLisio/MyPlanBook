<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentLogBodyWeight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LogBodyWeight.LogBodyWeightActivity"
    tools:showIn="@layout/activity_log_body_weight">

    <LinearLayout
        android:id="@+id/layoutBodyWeights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/inputWeightLayout"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputWeightEditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:ems="5"
                android:hint="Weight"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#948A8A"
                android:textSize="30sp" />

            <ToggleButton
                android:id="@+id/toggleUnitsButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="#B4FC5B"
                android:text="ToggleButton"
                android:textColor="#000000"
                android:textOff="KG"
                android:textOn="LBS"
                android:textSize="20sp" />

            <Button
                android:id="@+id/enterWeightButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="#B4FC5B"
                android:text="Enter"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="558dp">

            <LinearLayout
                android:id="@+id/weightsScrollLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>